---
// Props que recibe el componente
interface Props {
  titulo: string;
  descripcion: string;
  categoria: string;
  fecha: string;
  imagen: string;
  tecnologias: string[];
  estado: string;
  id: number;
}

const { titulo, descripcion, categoria, fecha, imagen, tecnologias, estado, id } = Astro.props;

// Formatear fecha para mostrar
const fechaFormateada = new Date(fecha).toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Función para obtener la clase CSS según el estado
function getEstadoClass(estado: string) {
  switch (estado) {
    case 'Completado':
      return 'estado-completado';
    case 'En desarrollo':
      return 'estado-desarrollo';
    case 'En mantenimiento':
      return 'estado-mantenimiento';
    default:
      return 'estado-default';
  }
}
---

<article class="project-card">
  <div class="card-header">
    <img 
      src={imagen} 
      alt={`Imagen del proyecto ${titulo}`}
      loading="lazy"
    />
    <div class="estado-badge">
      <span class={`estado ${getEstadoClass(estado)}`}>
        {estado}
      </span>
    </div>
  </div>
  
  <div class="card-content">
    <div class="card-meta">
      <span class="categoria">{categoria}</span>
      <time class="fecha" datetime={fecha}>{fechaFormateada}</time>
    </div>
    
    <h3 class="titulo">{titulo}</h3>
    <p class="descripcion">{descripcion}</p>
    
    <div class="tecnologias">
      <span class="tech-label">Tecnologías:</span>
      <ul class="tech-list">
        {tecnologias.map(tech => (
          <li class="tech-item">{tech}</li>
        ))}
      </ul>
    </div>
  </div>
  
  <div class="card-actions">
    <button class="btn-primary">Ver detalles</button>
    <button class="btn-secondary">Demo</button>
  </div>
</article>

<style>
  .project-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #e2e8f0;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .card-header {
    position: relative;
    overflow: hidden;
  }

  .card-header img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .card-header img {
    transform: scale(1.05);
  }

  .estado-badge {
    position: absolute;
    top: 12px;
    right: 12px;
  }

  .estado {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .estado-completado {
    background-color: #10b981;
    color: white;
  }

  .estado-desarrollo {
    background-color: #f59e0b;
    color: white;
  }

  .estado-mantenimiento {
    background-color: #6366f1;
    color: white;
  }

  .estado-default {
    background-color: #374151;
    color: white;
  }

  .card-content {
    padding: 24px;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
    font-size: 0.875rem;
  }

  .categoria {
    background-color: #f3f4f6;
    color: #374151;
    padding: 4px 12px;
    border-radius: 6px;
    font-weight: 500;
  }

  .fecha {
    color: #374151;
    font-weight: 400;
  }

  .titulo {
    font-size: 1.25rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .descripcion {
    color: #374151;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .tecnologias {
    margin-bottom: 20px;
  }

  .tech-label {
    display: block;
    font-weight: 600;
    color: #374151;
    margin-bottom: 8px;
    font-size: 0.875rem;
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .tech-item {
    background-color: #e5e7eb;
    color: #374151;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .card-actions {
    padding: 0 24px 24px;
    display: flex;
    gap: 12px;
  }

  .btn-primary,
  .btn-secondary {
    flex: 1;
    padding: 10px 16px;
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
  }

  .btn-primary {
    background-color: #3b82f6;
    color: white;
  }

  .btn-primary:hover {
    background-color: #2563eb;
  }

  .btn-secondary {
    background-color: transparent;
    color: #3b82f6;
    border: 1px solid #3b82f6;
  }

  .btn-secondary:hover {
    background-color: #3b82f6;
    color: white;
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .card-content {
      padding: 20px;
    }

    .card-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .titulo {
      font-size: 1.125rem;
    }

    .card-actions {
      padding: 0 20px 20px;
      flex-direction: column;
    }

    .btn-primary,
    .btn-secondary {
      flex: none;
    }
  }
</style>