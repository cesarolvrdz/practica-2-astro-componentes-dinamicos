<style>
  /* Contact Header */
  .contact-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: var(--space-3xl) 0;
    margin-bottom: var(--space-3xl);
  }

  .header-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .contact-header h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: var(--space-lg);
  }

  .header-description {
    font-size: 1.25rem;
    line-height: 1.6;
    opacity: 0.9;
  }

  /* Contact Content */
  .contact-content {
    margin-bottom: var(--space-3xl);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  /* Contact Info */
  .contact-info h2 {
    margin-bottom: var(--space-lg);
    color: var(--text-primary);
  }

  .contact-info > p {
    margin-bottom: var(--space-xl);
    color: var(--text-secondary);
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .contact-methods {
    margin-bottom: var(--space-2xl);
  }

  .contact-method {
    display: flex;
    gap: var(--space-md);
    padding: var(--space-lg);
    background: white;
    border-radius: var(--rounded-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
    margin-bottom: var(--space-md);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .contact-method:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .method-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .method-content h3 {
    font-size: 1.125rem;
    margin-bottom: var(--space-xs);
    color: var(--text-primary);
  }

  .method-content p {
    color: var(--text-secondary);
    margin-bottom: var(--space-sm);
    font-size: 0.9rem;
  }

  .contact-link {
    color: var(--primary-color);
    font-weight: 500;
    text-decoration: none;
    font-size: 0.875rem;
  }

  .contact-link:hover {
    text-decoration: underline;
  }

  /* Availability */
  .availability {
    background: white;
    padding: var(--space-lg);
    border-radius: var(--rounded-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
  }

  .availability h3 {
    margin-bottom: var(--space-md);
    color: var(--text-primary);
  }

  .availability-status {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
    font-weight: 500;
  }

  .status-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .status-indicator.available {
    background: #10b981;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);
    }
    70% {
      box-shadow: 0 0 0 8px rgba(16, 185, 129, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(16, 185, 129, 0);
    }
  }

  .availability p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 0;
  }

  /* Contact Form */
  .contact-form-container {
    background: white;
    padding: var(--space-2xl);
    border-radius: var(--rounded-xl);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--border-light);
  }

  .contact-form-container h2 {
    margin-bottom: var(--space-xl);
    color: var(--text-primary);
  }

  .form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
  }

  .form-group {
    margin-bottom: var(--space-md);
  }

  .form-group label {
    display: block;
    margin-bottom: var(--space-xs);
    font-weight: 500;
    color: var(--text-primary);
    font-size: 0.875rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: var(--space-sm) var(--space-md);
    border: 1px solid var(--border-color);
    border-radius: var(--rounded-md);
    font-size: 0.875rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
    cursor: pointer;
  }

  .checkbox-label input[type="checkbox"] {
    width: auto;
    margin: 0;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .checkbox-text {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .form-actions {
    margin-top: var(--space-lg);
    text-align: center;
  }

  .form-note {
    margin-top: var(--space-md);
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: 0;
  }

  /* Form Success */
  .form-success {
    text-align: center;
    padding: var(--space-2xl);
  }

  .success-icon {
    font-size: 4rem;
    margin-bottom: var(--space-lg);
  }

  .form-success h3 {
    color: var(--text-primary);
    margin-bottom: var(--space-md);
  }

  .form-success p {
    color: var(--text-secondary);
    margin-bottom: var(--space-xl);
  }

  /* FAQ Section */
  .contact-faq {
    background: var(--bg-primary);
    padding: var(--space-3xl) 0;
  }

  .contact-faq h2 {
    margin-bottom: var(--space-2xl);
    color: var(--text-primary);
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
  }

  .faq-item {
    background: white;
    padding: var(--space-lg);
    border-radius: var(--rounded-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--border-light);
  }

  .faq-item h3 {
    color: var(--text-primary);
    margin-bottom: var(--space-sm);
    font-size: 1.125rem;
  }

  .faq-item p {
    color: var(--text-secondary);
    margin-bottom: 0;
    line-height: 1.6;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .contact-header h1 {
      font-size: 2.5rem;
    }

    .header-description {
      font-size: 1.125rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .form-grid {
      grid-template-columns: 1fr;
    }

    .contact-form-container {
      padding: var(--space-lg);
    }

    .faq-grid {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }
  }
</style>

<script>
  // Manejo del formulario
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const successDiv = document.getElementById('form-success') as HTMLElement;

    if (form && successDiv) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
        const btnText = submitBtn?.querySelector('.btn-text') as HTMLElement;
        const btnLoading = submitBtn?.querySelector('.btn-loading') as HTMLElement;
        
        if (submitBtn && btnText && btnLoading) {
          // Mostrar estado de carga
          submitBtn.disabled = true;
          btnText.style.display = 'none';
          btnLoading.style.display = 'inline';
          
          // Simular env√≠o (en producci√≥n conectar con un servicio real)
          setTimeout(() => {
            // Ocultar formulario y mostrar mensaje de √©xito
            form.style.display = 'none';
            successDiv.style.display = 'block';
          }, 2000);
        }
      });
    }
  });

  // Funci√≥n para resetear el formulario
  function resetForm() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const successDiv = document.getElementById('form-success') as HTMLElement;
    const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
    const btnText = submitBtn?.querySelector('.btn-text') as HTMLElement;
    const btnLoading = submitBtn?.querySelector('.btn-loading') as HTMLElement;
    
    if (form && successDiv && submitBtn && btnText && btnLoading) {
      // Resetear formulario
      form.reset();
      
      // Restaurar bot√≥n
      submitBtn.disabled = false;
      btnText.style.display = 'inline';
      btnLoading.style.display = 'none';
      
      // Mostrar formulario y ocultar mensaje de √©xito
      form.style.display = 'block';
      successDiv.style.display = 'none';
    }
  }

  // Hacer resetForm disponible globalmente
  (window as any).resetForm = resetForm;
</script>