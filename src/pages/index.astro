<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: var(--space-3xl) 0;
    margin-bottom: var(--space-3xl);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
    max-width: 1200px;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: var(--space-lg);
    line-height: 1.1;
  }

  .highlight {
    background: linear-gradient(120deg, #a8edea 0%, #fed6e3 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 900;
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: var(--space-xl);
    color: rgba(255, 255, 255, 0.9);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .avatar {
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 3px solid rgba(255, 255, 255, 0.2);
    overflow: hidden;
  }

  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  /* Skills Section */
  .skills {
    padding: var(--space-3xl) 0;
    background: var(--bg-primary);
    margin-bottom: var(--space-3xl);
  }

  .skills h2 {
    margin-bottom: var(--space-2xl);
    color: var(--text-primary);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
  }

  .skill-card {
    background: white;
    padding: var(--space-xl);
    border-radius: var(--rounded-xl);
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid var(--border-light);
  }

  .skill-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .skill-icon {
    font-size: 3rem;
    margin-bottom: var(--space-md);
    display: block;
  }

  .skill-card h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
  }

  .skill-card p {
    color: var(--text-secondary);
    margin-bottom: 0;
  }

  /* Stats Section */
  .stats {
    padding: var(--space-3xl) 0;
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    margin-bottom: var(--space-3xl);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-xl);
  }

  .stat-card {
    text-align: center;
    color: white;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: var(--space-sm);
  }

  .stat-label {
    font-size: 1rem;
    opacity: 0.9;
  }

  /* Recent Projects Section */
  .recent-projects {
    padding: var(--space-3xl) 0;
    background: var(--bg-primary);
    margin-bottom: var(--space-3xl);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .section-header h2 {
    margin-bottom: var(--space-md);
  }

  .section-header p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-lg);
  }

  .projects-preview {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-xl);
  }

  .project-preview-card {
    background: white;
    border-radius: var(--rounded-xl);
    box-shadow: var(--shadow-md);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid var(--border-light);
  }

  .project-preview-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .project-preview-image {
    height: 200px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-image {
    font-size: 4rem;
  }

  .project-preview-content {
    padding: var(--space-lg);
  }

  .project-preview-content h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
  }

  .project-preview-content p {
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
  }

  .project-tech {
    font-size: 0.875rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  /* CTA Section */
  .cta {
    padding: var(--space-3xl) 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    text-align: center;
  }

  .cta-content {
    color: white;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: var(--space-md);
  }

  .cta-content p {
    font-size: 1.25rem;
    margin-bottom: var(--space-xl);
    opacity: 0.9;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
      text-align: center;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1.125rem;
    }

    .hero-actions {
      justify-content: center;
    }

    .avatar {
      width: 200px;
      height: 200px;
    }

    .avatar-icon {
      font-size: 3rem;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .projects-preview {
      grid-template-columns: 1fr;
    }

    .cta-content h2 {
      font-size: 2rem;
    }

    .cta-content p {
      font-size: 1.125rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: var(--space-2xl) 0;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-actions {
      flex-direction: column;
    }

    .stats-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
  }
</style>
