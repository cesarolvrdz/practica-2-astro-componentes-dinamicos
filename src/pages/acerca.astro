    font-weight: 800;
    margin-bottom: var(--space-lg);
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: var(--space-xl);
    opacity: 0.9;
  }

  .hero-badges {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

